{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "./",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es5", "es2020", "dom"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./",
		"strict": true,
		"target": "es5",
		"types": ["node", "jasmine"]
	},
	"exclude": ["node_modules", "test"]
}
