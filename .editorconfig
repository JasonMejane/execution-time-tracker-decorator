# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
max_line_length = 160
trim_trailing_whitespace = true

[*.js]
quote_type = single

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
